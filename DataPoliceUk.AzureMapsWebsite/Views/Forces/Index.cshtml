@{
    ViewData["Title"] = "Forces";
}

<div class="row forces">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <h5>@ViewData["Message"]</h5>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-11">
                <select id="forces" class="forces__select form-control">
                    <option value="">Please select...</option>
                </select>
            </div>
            <div class="col-1">
                <div class="spinner-border spinner-border-sm text-success" role="status" style="display:none;">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card bg-light mb-3 force__panel" style="display:none;">
                    <div class="card-body">
                        <h5 class="card-title force__name"></h5>
                        <p class="card-text force__description"></p>
                        <p>Telephone: <span class="force__telephone"></span></p>
                        <p>Url: <a href="" target='_blank' class="card-link force__url"></a></p>
                    </div>
                </div>
            </div>            
        </div>

        <div class="row force__repeater" style="display:none;"></div>

    </div>
</div>