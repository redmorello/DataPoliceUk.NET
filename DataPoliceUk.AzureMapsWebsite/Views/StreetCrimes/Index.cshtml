@{
    ViewData["Title"] = "Street Crimes";
}

<link rel="stylesheet" href="https://atlas.microsoft.com/sdk/css/atlas.min.css?api-version=2" type="text/css" />
<script src="https://atlas.microsoft.com/sdk/js/atlas.min.js?api-version=2"></script>

<div class="row streetcrime">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <h5>@ViewData["Message"]</h5>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-xs-6">
                <select id="forces" class="streetcrime_forces__select form-control">
                    <option value="">Please select...</option>
                </select>
            </div>
            <div class="col-xs-6">
                <select id="boundary" class="streetcrime_boundary__select form-control">
                    <option value="">Please select...</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <h5>Filters:</h5>
        <form class="form-inline">
            <div class="row">
                <div class="col-xs-4">
                    <select id="date" class="form-control">
                        <option value="">Please select a date...</option>
                        <option value="2019-04">2019-04</option>
                        <option value="2019-03">2019-03</option>
                        <option value="2019-02">2019-02</option>
                        <option value="2019-01">2019-01</option>
                        <option value="2018-12">2018-12</option>
                        <option value="2018-11">2018-11</option>
                        <option value="2018-10">2018-10</option>
                        <option value="2018-09">2018-09</option>
                        <option value="2018-08">2018-08</option>
                        <option value="2018-07">2018-07</option>
                        <option value="2018-06">2018-06</option>
                        <option value="2018-05">2018-05</option>
                        <option value="2018-04">2018-04</option>
                        <option value="2018-03">2018-03</option>
                        <option value="2018-02">2018-02</option>
                        <option value="2018-01">2018-01</option>
                    </select>
                </div>
                <div class="col-xs-4">
                    <input type="text" id="latitude" class="form-control" placeholder="latitude" value="" onChange={this.handleInputChange} />
                </div>
                <div class="col-xs-4">
                    <input type="text" id="longitude" class="form-control" placeholder="longitude" value="" onChange={this.handleInputChange} />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button class="streetcrimes_btn btn">Submit</button>
                </div>
            </div>

        </form>
    </div>

    <div class="col-md-12">

        <div style="width: 100%;height: 600px">
            <div id="map"></div>
            <div id="legend">
                <h3>Legend</h3>
                <ul>
                    <li className='red'>Violent Crime</li>
                    <li className='blue'>Public Order</li>
                    <li className='purple'>Criminal Damage</li>
                    <li className='darkgoldenrod'>Burglary</li>
                    <li className='green'>Other</li>
                </ul>
            </div>
        </div>

    </div>
</div>

<style>
    #map {
        width: 100%;
        height: 100%;
    }
</style>