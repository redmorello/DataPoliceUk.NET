@{
    ViewData["Title"] = "Street Crimes";
}

<link rel="stylesheet" href="https://atlas.microsoft.com/sdk/css/atlas.min.css?api-version=2" type="text/css" />
<script src="https://atlas.microsoft.com/sdk/js/atlas.min.js?api-version=2"></script>

<div class="row streetcrime">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <h5>@ViewData["Message"]</h5>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <select id="forces" class="streetcrime_forces__select form-control">
                    <option value="">Please select...</option>
                </select>
            </div>
            <div class="col-md-5">
                <select id="boundary" class="streetcrime_boundary__select form-control">
                    <option value="">Please select...</option>
                </select>
            </div>
            <div class="col-1">
                <div class="spinner-border spinner-border-sm text-success" role="status" style="display:none;">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <h5>Filters:</h5>
        <form class="form-inline">
            <div class="form-group mb-2">
                <label for="date" class="sr-only">Date</label>
                <select id="date" class="form-control">
                    <option value="">Select a date...</option>
                    <option value="2019-04">2019-04</option>
                    <option value="2019-03">2019-03</option>
                    <option value="2019-02">2019-02</option>
                    <option value="2019-01">2019-01</option>
                    <option value="2018-12">2018-12</option>
                    <option value="2018-11">2018-11</option>
                    <option value="2018-10">2018-10</option>
                    <option value="2018-09">2018-09</option>
                    <option value="2018-08">2018-08</option>
                    <option value="2018-07">2018-07</option>
                    <option value="2018-06">2018-06</option>
                    <option value="2018-05">2018-05</option>
                    <option value="2018-04">2018-04</option>
                    <option value="2018-03">2018-03</option>
                    <option value="2018-02">2018-02</option>
                    <option value="2018-01">2018-01</option>
                </select>
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="latitude" class="sr-only">Latitude</label>
                <input type="text" id="latitude" class="form-control" placeholder="latitude" disabled />
            </div>
            <div class="form-group mb-2">
                <label for="longitude" class="sr-only">Longitude</label>
                <input type="text" id="longitude" class="form-control" placeholder="longitude" disabled />
            </div>
            <button type="submit" class="streetcrimes_btn btn btn-success mx-sm-3 mb-4" disabled>Submit</button>
        </form>
    </div>

    <div class="col-md-12">
        <div style="width: 100%;height: 600px">
            <div id="map"></div>
        </div>
    </div>
    <div class="col-md-12">
        <div id="legend">
            <h5>Legend</h5>
            <span class="badge badge-primary anti-social-behaviour">Anti Social Behaviour</span>
            <span class="badge badge-primary bicycle-theft">Bicycle Theft</span>
            <span class="badge badge-primary burglary">Burglary</span>
            <span class="badge badge-primary criminal-damage-arson">Criminal Damage Arson</span>
            <span class="badge badge-primary drugs">Drugs</span>
            <span class="badge badge-primary other-theft">Other Theft</span>
            <span class="badge badge-primary robbery">Robbery</span>
            <span class="badge badge-primary shoplifting">Shoplifting</span>
            <span class="badge badge-primary violent-crime">Violent Crime</span>
            <span class="badge badge-primary other-crime">Other Crime</span>
            <span class="badge badge-primary theft-from-the-person">Theft From The Person</span>
            <span class="badge badge-primary vehicle-crime">Vehicle Crime</span>
        </div>
    </div>
    
</div>

<style>
    #map {
        width: 100%;
        height: 100%;
    }
</style>